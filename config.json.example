{
  // WhatsApp configuration
  // - api_base_url: URL of your Waha instance (WhatsApp HTTP API)
  // - session_name: Name of the WhatsApp session (used in API endpoints)
  // - timeout_ms: Timeout for API requests
  // - retry_count: Maximum number of retry attempts
  
  "whatsapp": {
    "api_base_url": "http://localhost:3000",
    "session_name": "default",
    "timeout_ms": 10000,
    "retry_count": 3
  },

  // Signal configuration
  // - rpc_url: URL of your signal-cli JSON-RPC daemon
  // - auth_token: Authentication token for Signal API access
  // - phone_number: Phone number for Signal API access
  // - device_name: Device name for Signal API access
  "signal": {
    "rpc_url": "http://localhost:8080/jsonrpc",
    "auth_token": "your-signal-auth-token",
    "phone_number": "+1234567890",
    "device_name": "whatsignal-device"
  },

  // Message retry configuration
  // - initial_backoff_ms: Initial delay before first retry
  // - max_backoff_ms: Maximum delay between retries
  // - max_attempts: Maximum number of retry attempts
  "retry": {
    "initial_backoff_ms": 1000,
    "max_backoff_ms": 60000,
    "max_attempts": 5
  },

  // Number of days to keep message history
  "retentionDays": 30,

  // Logging level (debug, info, warn, error)
  "log_level": "info",

  // Database configuration
  "database": {
    "path": "./whatsignal.db"
  },

  // Media configuration
  // - cache_dir: Directory to store cached media files
  // - maxSizeMB: Maximum file sizes in MB for different media types
  // - allowedTypes: Allowed file extensions for different media types
  "media": {
    "cache_dir": "./media_cache",
    "maxSizeMB": {
      "image": 5,
      "video": 100,
      "gif": 25,
      "document": 100,
      "voice": 16
    },
    "allowedTypes": {
      "image": ["jpg", "jpeg", "png"],
      "video": ["mp4", "mov"],
      "document": ["pdf", "doc", "docx"],
      "voice": ["ogg"]
    }
  }
} 